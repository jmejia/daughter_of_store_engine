<div class="well well-large">
  <% unless current_user %>
    <h1>Create an account!</h1>
    <%= link_to "Sign up", signup_path%> or <%= link_to "Login", login_path %>
  <% end %>
  <h1>Invoice Payment</h1>
  <hr>
  <h4>The amount to be paid is <%= amount_in_dollars(@fee) %></h4>
  <hr>
  <%= render 'form' %>
</div>